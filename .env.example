# --- Database ---
# Connection string for MongoDB (include credentials/cluster info)
MONGO_URL=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/
# Optional database name override (defaults to "comiccrate")
# MONGO_DB_NAME=comiccrate

# Dedicated connection string for running tests (NODE_ENV=test)
# Use a separate cluster or local instance so tests can freely create/drop data
MONGO_URL_TEST=mongodb://localhost:27017/comiccrate_test
# Optional test database name override (defaults to "comiccrate_test")
# MONGO_DB_NAME_TEST=comiccrate_test

# --- Auth / JWT ---
# Secret used to sign and verify JWT cookies
TOKEN_SECRET=replace-me-with-a-long-random-string

# --- App settings ---
# Base URL of the site (used in email links)
DOMAIN=http://localhost:3000

# Optional, only if you read NEXT_PUBLIC_BASE_URL from client code
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# --- Email (Mailer) ---
# SMTP credentials for Mailtrap or your chosen provider
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-username
SMTP_PASS=your-mailtrap-password

# --- ComicVine API proxy ---
COMICS_API_URL=https://comicvine.gamespot.com/api
COMICS_API_KEY=your-comicvine-api-key

# --- Nodemailer "from" identity ---
EMAIL_FROM=no-reply@comiccrate.dev
